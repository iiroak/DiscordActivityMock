<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DiscordActivityMockV2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DiscordActivityMockV2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Discord Activity Mock V2"
    Closed="Window_Closed">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom TitleBar -->
        <Grid x:Name="TitleBarGrid" Grid.Row="0" Height="40" Background="#1a1b26">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- App Icon + Title (This is the draggable area) -->
            <Border x:Name="TitleBarBorder" Grid.Column="0" Background="Transparent">
                <StackPanel Orientation="Horizontal" Spacing="10" Padding="12,0" VerticalAlignment="Center">
                    <Border CornerRadius="5" Width="24" Height="24" Background="#5865F2">
                        <FontIcon Glyph="&#xE7FC;" FontSize="12" Foreground="White" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Discord Activity Mock" FontSize="12" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Theme Toggle -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center" Margin="0,0,8,0">
                <FontIcon x:Name="ThemeIcon" Glyph="&#xE793;" FontSize="12" Foreground="#99AAB5"/>
                <ToggleSwitch x:Name="ThemeToggle" OnContent="" OffContent="" MinWidth="40" 
                              Toggled="ThemeToggle_Toggled" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Window Controls (Right-aligned, not in draggable area) -->
            <StackPanel x:Name="WindowControlsPanel" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Stretch">
                <Button x:Name="MinimizeBtn" Click="MinimizeBtn_Click" VerticalAlignment="Stretch"
                        Background="Transparent" BorderThickness="0" Width="46" CornerRadius="0">
                    <FontIcon Glyph="&#xE921;" FontSize="10" Foreground="#99AAB5"/>
                </Button>
                <Button x:Name="MaximizeBtn" Click="MaximizeBtn_Click" VerticalAlignment="Stretch"
                        Background="Transparent" BorderThickness="0" Width="46" CornerRadius="0">
                    <FontIcon x:Name="MaximizeIcon" Glyph="&#xE922;" FontSize="10" Foreground="#99AAB5"/>
                </Button>
                <Button x:Name="CloseBtn" Click="CloseBtn_Click" VerticalAlignment="Stretch"
                        Width="46" CornerRadius="0" BorderThickness="0">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground">Transparent</SolidColorBrush>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#c42b1c</SolidColorBrush>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed">#b22a1c</SolidColorBrush>
                    </Button.Resources>
                    <FontIcon Glyph="&#xE8BB;" FontSize="10" Foreground="#99AAB5"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="16,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 1: WordPad + Activity Selection -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="1.8*"/>
                </Grid.ColumnDefinitions>

                <!-- Step 1: Get WordPad -->
                <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" Padding="14">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="24" Height="24" CornerRadius="12" Background="#5865F2">
                                <TextBlock Text="1" Foreground="White" FontWeight="Bold" FontSize="12"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Get WordPad" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="6">
                            <Button x:Name="WordPadSystemBtn" HorizontalAlignment="Stretch" Padding="10,8" Click="WordPadSystemBtn_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="14"/>
                                    <TextBlock Text="Copy from System" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="WordPadGitHubBtn" HorizontalAlignment="Stretch" Padding="10,8" Click="WordPadGitHubBtn_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                    <TextBlock Text="Download Backup" FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <InfoBar x:Name="WordPadStatusBar" IsOpen="True" IsClosable="False" Severity="Warning"
                                 Title="Status" Message="Select an option above"/>
                    </StackPanel>
                </Border>

                <!-- Step 2: Select Activity -->
                <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" Padding="14">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="24" Height="24" CornerRadius="12" Background="#43b581">
                                <TextBlock Text="2" Foreground="White" FontWeight="Bold" FontSize="12"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Select Activity" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="18" Height="18" Margin="8,0,0,0"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ActivitySearchBox" PlaceholderText="Search..." IsEnabled="False"
                                     Padding="8,6" FontSize="12" TextChanged="ActivitySearchBox_TextChanged"/>
                            <Button x:Name="FetchActivitiesBtn" Grid.Column="1" IsEnabled="False" Margin="6,0,0,0" 
                                    Padding="10,6" Click="FetchActivitiesBtn_Click" ToolTipService.ToolTip="Fetch activity list">
                                <FontIcon x:Name="FetchIcon" Glyph="&#xE895;" FontSize="14"/>
                            </Button>
                        </Grid>
                        
                        <ComboBox x:Name="ActivityListCombo" HorizontalAlignment="Stretch" IsEnabled="False"
                                  SelectionChanged="ActivityListCombo_SelectionChanged"/>
                        
                        <!-- Custom Activity Inline -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="FolderNameTxt" Grid.Column="0" Header="Folder" Text="Accessories" 
                                     IsEnabled="False" FontSize="12" Padding="8,6"/>
                            <TextBox x:Name="FileExeTxt" Grid.Column="2" Header="Exe Name" Text="M1-Win64-Shipping" 
                                     IsEnabled="False" FontSize="12" Padding="8,6"/>
                            <Button x:Name="ClearBtn" Grid.Column="3" IsEnabled="False" VerticalAlignment="Bottom"
                                    Margin="6,0,0,0" Padding="8" ToolTipService.ToolTip="Clear" Click="ClearBtn_Click">
                                <FontIcon Glyph="&#xE894;" FontSize="12"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Row 2: Run Activity Controls -->
            <Border Grid.Row="1" Margin="0,12,0,0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" Padding="14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step Badge -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Border Width="24" Height="24" CornerRadius="12" Background="#faa61a">
                            <TextBlock Text="3" Foreground="White" FontWeight="Bold" FontSize="12"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Run Activity" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Hide WordPad Button with Flyout -->
                    <Button x:Name="HideSettingsBtn" Grid.Column="1" Margin="16,0,0,0" Padding="10,6" 
                            IsEnabled="False" VerticalAlignment="Center" ToolTipService.ToolTip="Hide Settings">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE7B3;" FontSize="14"/>
                            <TextBlock x:Name="HideStatusText" Text="Hide: 15s" FontSize="12"/>
                        </StackPanel>
                        <Button.Flyout>
                            <Flyout x:Name="HideFlyout" Placement="Bottom" Opening="HideFlyout_Opening">
                                <StackPanel Spacing="12" Width="250">
                                    <TextBlock Text="Hide WordPad" FontWeight="SemiBold" FontSize="14"/>
                                    <CheckBox x:Name="HideWordPadCheck" Content="Enable hide" IsChecked="True"
                                              Checked="HideWordPadCheck_Changed" Unchecked="HideWordPadCheck_Changed"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Delay" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <NumberBox x:Name="HideDelaySeconds" Grid.Column="1" Value="15" Minimum="1" Maximum="60" 
                                                   SpinButtonPlacementMode="Inline" MinWidth="100" HorizontalAlignment="Stretch"
                                                   SmallChange="1" LargeChange="5" ValueChanged="HideDelaySeconds_ValueChanged"/>
                                        <TextBlock Grid.Column="2" Text="sec" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </Grid>
                                    <TextBlock Text="Discord may take time to detect the activity. If it's not recognized, increase this value." 
                                               FontSize="11" TextWrapping="Wrap"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    
                    <!-- Auto-Stop Timer Button with Flyout -->
                    <Button x:Name="TimerSettingsBtn" Grid.Column="2" Margin="8,0,0,0" Padding="10,6" 
                            IsEnabled="False" VerticalAlignment="Center" ToolTipService.ToolTip="Timer Settings">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE916;" FontSize="14"/>
                            <TextBlock x:Name="TimerStatusText" Text="Timer: Off" FontSize="12"/>
                        </StackPanel>
                        <Button.Flyout>
                            <Flyout x:Name="TimerFlyout" Placement="Bottom" Opening="TimerFlyout_Opening">
                                <StackPanel Spacing="12" Width="250">
                                    <TextBlock Text="Auto-Stop Timer" FontWeight="SemiBold" FontSize="14"/>
                                    <CheckBox x:Name="AutoStopCheck" Content="Enable auto-stop" 
                                              Checked="AutoStopCheck_Changed" Unchecked="AutoStopCheck_Changed"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Stop after" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <NumberBox x:Name="AutoStopMinutes" Grid.Column="1" Value="30" Minimum="1" Maximum="1440" 
                                                   SpinButtonPlacementMode="Inline" MinWidth="100" HorizontalAlignment="Stretch" IsEnabled="False"
                                                   SmallChange="1" LargeChange="10" ValueChanged="AutoStopMinutes_ValueChanged"/>
                                        <TextBlock Grid.Column="2" Text="min" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </Grid>
                                    <TextBlock Text="Max: 1440 min (24 hours)" FontSize="11" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    
                    <!-- Status + Timer (Centered) -->
                    <Border Grid.Column="3" Margin="16,0" Padding="12,6" CornerRadius="8" 
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Status -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                <Ellipse x:Name="StatusIndicator" Width="8" Height="8" Fill="#99AAB5"/>
                                <TextBlock x:Name="StatusText" Text="Inactive" FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" MinWidth="50"/>
                            </StackPanel>
                            
                            <!-- Separator -->
                            <Border Grid.Column="1" Width="1" Height="14" Margin="10,0"
                                    Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                            
                            <!-- Timer -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE823;" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="TimerText" Text="00:00:00" FontSize="12" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontFamily="Consolas"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <Button x:Name="StartActivityBtn" Grid.Column="4" IsEnabled="False" Padding="20,10" Click="StartActivityBtn_Click">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackground">#43b581</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#3ca374</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed">#358a66</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundDisabled">#3a4a5a</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForeground">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPressed">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundDisabled">#8899aa</SolidColorBrush>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE768;" FontSize="14"/>
                            <TextBlock Text="Start" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="StopActivityBtn" Grid.Column="6" IsEnabled="False" Padding="20,10" Click="StopActivityBtn_Click">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackground">#ed4245</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#d63d40</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed">#bf3639</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundDisabled">#5a3a3a</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForeground">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPressed">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundDisabled">#aa8888</SolidColorBrush>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE71A;" FontSize="14"/>
                            <TextBlock Text="Stop" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer with Social Links -->
        <Border Grid.Row="2" Padding="12,8" 
                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Social Links (Left) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="2" VerticalAlignment="Center">
                    <Button x:Name="GitHubBtn" ToolTipService.ToolTip="GitHub" Click="GitHubBtn_Click"
                            Background="Transparent" BorderThickness="0" Padding="8,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE943;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="GitHub" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="DiscordBtn" ToolTipService.ToolTip="Discord" Click="DiscordBtn_Click"
                            Background="Transparent" BorderThickness="0" Padding="8,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE8BD;" FontSize="14" Foreground="#5865F2"/>
                            <TextBlock Text="Discord" FontSize="11" Foreground="#5865F2"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="TwitterBtn" ToolTipService.ToolTip="Twitter" Click="TwitterBtn_Click"
                            Background="Transparent" BorderThickness="0" Padding="8,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE890;" FontSize="14" Foreground="#1DA1F2"/>
                            <TextBlock Text="Twitter" FontSize="11" Foreground="#1DA1F2"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="InfoBtn" ToolTipService.ToolTip="About" Click="InfoBtn_Click"
                            Background="Transparent" BorderThickness="0" Padding="8,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="#43b581"/>
                            <TextBlock Text="About" FontSize="11" Foreground="#43b581"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Credits (Right) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <TextBlock Text="Made with" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <FontIcon Glyph="&#xEB52;" FontSize="11" Foreground="#ed4245"/>
                    <TextBlock Text="by" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <HyperlinkButton Content="iiroak" NavigateUri="https://github.com/iiroak" Padding="0" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
